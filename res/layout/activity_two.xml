<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montery"
        android:padding="15dp"
        android:text="@string/status"
        android:textColor="@color/white"
        android:textSize="35dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:src="@drawable/middle"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/l_shape"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <Button
            android:id="@+id/middle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_his"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:textSize="35dp"
            android:fontFamily="@font/montery"/>

        <Button
            android:id="@+id/l_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_his"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:textSize="35dp"
            android:fontFamily="@font/montery"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/line"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/cross"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <Button
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_his"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:textSize="35dp"
            android:fontFamily="@font/montery"/>

        <Button
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_his"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:textSize="35dp"
            android:fontFamily="@font/montery"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/fish"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/protrude"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <Button
            android:id="@+id/fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_his"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:textSize="35dp"
            android:fontFamily="@font/montery"/>

        <Button
            android:id="@+id/protrude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_his"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:textSize="35dp"
            android:fontFamily="@font/montery"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/s_shape"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <Button
            android:id="@+id/s_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_his"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:textSize="35dp"
            android:fontFamily="@font/montery"/>
    </GridLayout>

    <Button
        android:id="@+id/return_navi"
        android:text="@string/return_navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:fontFamily="@font/montery"
        android:textSize="20dp"/>

</ScrollView>



